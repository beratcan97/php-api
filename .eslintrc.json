{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "no-console": "off",
    "import/prefer-default-export": "off",
    "no-plusplus": "off",
    "no-await-in-loop": "off",
    "func-names": "off",
    "no-restricted-globals": "off",
    "no-alert": "off",
    "no-prototype-builtins": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "arrowParens": "always",
        "semi": true
      }
    ]
  }
}
